@model Apartment

<h1>XEM CHI TIẾT</h1>
<div>

    <hr />
    <br />
    <dl class="row">
        <dt class="col-sm-2">

            Tên căn hộ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApartmentName)
        </dd>
        <dt class="col-sm-2">

            Mã căn hộ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApartmentCode)
        </dd>
        <dt class="col-sm-2">

            Tầng Số
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FloorNumber)
        </dd>
        <dt class="col-sm-2">
            Căn Hộ Số
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApartmentNumber)
        </dd>
        <dt class="col-sm-2">

            Ngày Bàn Giao
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDay)
        </dd>
        <dt class="col-sm-2">

            Diện Tích
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Area)M2
        </dd>
        <dt class="col-sm-2">

            TRẠNG THÁI TÒA NHÀ
        </dt>

        @if (Model.Status == 1)
        {
            <dd class="col-sm-10">
                Đã bàn giao
            </dd>
        }@if (Model.Status == 2)
        {
            <dd class="col-sm-10">
                Còn trống
            </dd>
        }@if (Model.Status == 3)
        {
            <dd class="col-sm-10">
                Bảo trì
            </dd>
        }




    </dl>
    <br />
   
</div>
<div>
    <div style="float: left; padding-right:10px">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ApartmentId">Sửa</a>
    </div>
    <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
</div>